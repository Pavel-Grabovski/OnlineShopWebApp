@model Role
<form method="post">
    <div>
        <h3>Создание новой роли</h3>
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-6">
           
            <div class="form-floating">
                <input type="text" class="form-control" name="Name" placeholder="Наименование роли" asp-for="Name" />
                <label asp-for="Name"></label>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <button class="w-100 btn btn-lg btn-success" type="submit" asp-area="Admin" asp-controller="Role" asp-action="Add">
                Создать
            </button>
        </div>
    </div>
</form>