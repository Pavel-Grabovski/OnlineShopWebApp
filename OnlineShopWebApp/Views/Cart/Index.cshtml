@model Cart

@if (Model == null)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row"> 
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена руб.</th>
                        <th>Количество</th>
                        <th>Стоимость руб.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Items)
                    {
                        <tr>
                            <th>@item.Product.Name</th>
                            <th>@item.Product.Cost</th>
                            <th>@item.Amount</th>
                            <th>@item.Cost</th>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-md-end">
                <h3>Итого: @Model.Cost</h3>
            </div>
            <div class="text-md-center">
                <a class="btn btn-success" href="home/index" role="button">Продолжить покупки</a>
                <a class="btn btn-primary" href="#" role="button">Оформить заказ</a>
            </div>
        </div>
    </div>
}
