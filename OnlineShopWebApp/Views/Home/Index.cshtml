@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-3 card shadow">
            @if (@product.ImagePath != null)
            {
                <img class="card-img-top" src=@product.ImagePath alt="Изображение товара">
            }
            else
            {
                <img class="card-img-top" src="/images/NotImage.jpg" alt="Изображение товара">
            }
            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>    
                </a>
                <h5>@product.Cost руб</h5>
                <div class="btn-group d-flex align-items-center" role="group">
                    <a  class="btn btn-success" href="/cart/add?productId=@product.Id" role="button">Добавить в корзину</a>
                    <a class="btn btn-warning" href="/favorites/add?productId=@product.Id" role="button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    }
</div>



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
