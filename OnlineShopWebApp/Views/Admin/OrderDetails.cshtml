@model Order

<form method="post">
    <div class="row">
        <div class="col-6">
            <table class="table">
                <tr>
                    <td>Дата и время</td>
                    <td>@Model.DataTime.ToString("g")</td>
                </tr>
                <tr>
                    <td>Адрес доставки</td>
                    <td>@Model.UserInfo.Address</td>
                </tr>
                <tr>
                    <td>Получатель</td>
                    <td>@Model.UserInfo.Surname @Model.UserInfo.Name @Model.UserInfo.Patronymic</td>
                </tr>
                <tr>
                    <td>Телефон</td>
                    <td>@Model.UserInfo.Phone</td>
                </tr>
                 <tr>
                    <td>Сумма заказа</td>
                    <td>@Model.Cost</td>
                </tr>
                 <tr>
                    <td>Статус заказа</td>
                    <td>
                        <select 
                            asp-for="@Model.Status" 
                            asp-items="@Html.GetEnumSelectList<OrderStatus>()" 
                                class="form-control">
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />
    <button class="btn btn-success" type="submit" asp-controller="Admin" asp-action="SaveOrderStatus" asp-route-Id="@Model.Id">Сохранить</button>
</form>