@model Product
<form method="post">
    <div class="row">
        <div class="col-6">
            <img class="card-img-top" alt="Изображение товара" />
        </div>
        <div class="col-6">
            @*<div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupFile01">Upload</label>
                <input type="file" class="form-control" id="inputGroupFile01">
            </div>*@
            <div class="form-floating">
                <input class="form-control" name="Name" placeholder="Наименование товара" />
                <label >Наименование товара</label>
                <span></span>
            </div>
            <div class="form-floating">
                <textarea class="form-control" name="Description" placeholder="Описание" style="height: 200px"></textarea>
                <label for="floatingTextarea2">Описание</label>
            </div>
            <div class="form-floating">
                <input class="form-control" name="Cost" placeholder="Цена" />
                <label>Стоимость</label>
                <span></span>
            </div>
            <button class="w-100 btn btn-lg btn-success" type="submit" asp-area="" asp-controller="Admin" asp-action="AddNewProduct">
                Добавить
            </button>
        </div>
    </div>
</form>