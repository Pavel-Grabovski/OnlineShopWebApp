@model UserInfo
<form method="post">
    <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Ваша корзина</span>
                <span class="badge bg-primary rounded-pill">@ViewBag.Cart.Amount</span>
            </h4>
            <div class="list-group">
                @foreach (var items in ViewBag.Cart.Items)
            {
                <a class="list-group-item">
                    <div class=" d-flex justify-content-between lh-sm">
                        <h6 class="my-0">@items.Product.Name</h6>
                        <h6>@items.Cost ₽</h6>
                    </div>
                    <div class="d-flex flex-column">
                        <small>Количество: @items.Amount шт.</small>
                        <small>Цена: @items.Product.Cost ₽/шт.</small>
                    </div>
                </a>
            }
                <div class="list-group-item d-flex justify-content-between">
                    <span>Итого</span>
                    <strong>@ViewBag.Cart.Cost ₽</strong>
                </div>
            </div>

            <form class="card p-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Промокод">
                    <button type="submit" class="btn btn-secondary">Активировать</button>
                </div>
            </form>
        </div>
        <div class="col-md-7 col-lg-8">
            <h4 class="mb-3">Ваши данные</h4>
            <div class="row g-3">

                <div class="text-danger" asp-validation-summary="All"></div>

                <input name="UserId" value=@ViewBag.Cart.UserId hidden />

                <div class="form-floating col-sm-4">
                    <input type="text" class="form-control" placeholder="Фамилия" name="surname" asp-for="Surname">
                    <label class="form-label" asp-for="Surname">Фамилия</label>
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>

                <div class="form-floating col-sm-4">
                    <input type="text" class="form-control" placeholder="Имя" name="name" asp-for="Name">
                    <label class="form-label" asp-for="Name">Имя</label>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-floating col-sm-4">
                    <input type="text" class="form-control" placeholder="Отчество" name="patronymic" asp-for="Patronymic">
                    <label class="form-label" asp-for="Patronymic">Отчество</label>
                    <span class="text-danger" asp-validation-for="Patronymic"></span>
                </div>

                <div class="form-floating">
                    <input type="email" class="form-control" placeholder="name@example.com" name="email" asp-for="Email" />
                    <label asp-for="Email">Email</label>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-floating">
                    <input type="tel" class="form-control" placeholder="Телефон" name="phone" asp-for="Phone" />
                    <label asp-for="Phone">Телефон</label>
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" placeholder="Введите адрес доставки" name="address" asp-for="Address" />
                    <label asp-for="Address">Адрес</label>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
            </div>
            <hr class="my-4">

            @*<h4 class="mb-3">Способ оплаты</h4>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">Наличные</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label" for="flexRadioDefault2">Картой при получении</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3">
                <label class="form-check-label" for="flexRadioDefault3">Картой онлайн прямо сейчас</label>
            </div>*@
            
            <button class="w-100 btn btn-primary btn-lg" type="submit" asp-area="" asp-controller="Order" asp-action="Buy">Продолжить оформление заказа</button>
            
        </div>
    </div>
</form>
